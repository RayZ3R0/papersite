{
  "name": "papersite",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "node scripts/run-tests.js",
    "test:devices": "jest devices --config=jest.config.js --testPathPattern=devices.test",
    "test:performance": "jest performance --config=jest.config.js --testPathPattern=performance.test",
    "test:network": "jest network --config=jest.config.js --testPathPattern=network.test",
    "test:touch": "jest touch --config=jest.config.js --testPathPattern=touch.test",
    "test:e2e": "jest e2e --config=jest.config.js --testPathPattern=e2e.test",
    "test:a11y": "jest a11y --config=jest.config.js --testPathPattern=a11y.test",
    "test:offline": "jest offline --config=jest.config.js --testPathPattern=offline.test",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:update": "jest -u",
    "prepare-test-report": "node scripts/run-tests.js --report",
    "verify": "node scripts/run-tests.js --verify",
    "network-sim": "sudo node -r ts-node/register -r tsconfig-paths/register scripts/network-sim.ts",
    "validate": "node -r ts-node/register -r tsconfig-paths/register scripts/validate-implementation.ts",
    "check-all": "node scripts/run-tests.js --all",
    "prepare": "husky install",
    "precommit": "pnpm run verify"
  },
  "dependencies": {
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18",
    "whatwg-fetch": "^3.6.20"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/testing-library__jest-dom": "^5.14.9",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.2.0",
    "playwright": "^1.51.1",
    "postcss": "^8.5.3",
    "puppeteer": "^22.3.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pnpm run verify"
    }
  }
}
